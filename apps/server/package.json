{
  "name": "server",
  "version": "1.0.0",
  "description": "Luminaapi服务",
  "private": true,
  "egg": {
    "typescript": true
  },
  "scripts": {
    "start": "egg-scripts start --dir ./dist --title=egg-server-api --port 7002",
    "stop": "egg-scripts stop --title=egg-server-api",
    "dev": "egg-bin dev --dts",
    "test-local": "egg-bin test --timeout=60000 --mochawesome false --require=./test/.root-hooks.js -- test/**/*.test.ts",
    "test": "npm run test-local",
    "cov": "egg-bin cov -p",
    "ci": "npm run lint && npm run cov && npm run tsc && npm run clean",
    "lint": "eslint . --ext .ts --cache",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean:log": "rm -rf logs",
    "clean": "npm run clean:log"
  },
  "dependencies": {
    "@lumina/logger": "workspace:*",
    "@lumina/data": "workspace:*",
    "@lumina/notify": "workspace:*",
    "@lumina/storage": "workspace:*",
    "@lumina/subscription": "workspace:*",
    "axios": "^1.4.0",
    "cookie": "^0.5.0",
    "dotenv": "^17.2.1",
    "egg": "^3.15.0",
    "egg-scripts": "^2.17.0",
    "egg-static": "^2.3.1",
    "koa-static": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "ioredis": "^5.3.2",
    "p-limit": "3",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@eggjs/tsconfig": "1",
    "@types/mocha": "10",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "egg-bin": "^6.10.0",
    "egg-mock": "5",
    "egg-ts-helper": "^3.1.1",
    "eslint": "8",
    "eslint-config-custom": "workspace:*",
    "eslint-config-egg": "12",
    "tsconfig": "workspace:*",
    "typescript": "4.9.5",
    "@types/jsonwebtoken": "^9.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ]
}